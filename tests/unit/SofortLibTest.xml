<?xml version="1.0" encoding="UTF-8" ?>
<phpunit testSuiteLoaderClass="PHPUnit_Runner_StandardTestSuiteLoader"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true">
