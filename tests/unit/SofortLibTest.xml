        <testsuite name="SofortLib">
            <file>Xml\xmlToArrayNodeTest.php</file>
            <file>Xml\ArrayToXmlTest.php</file>
            <file>AbstractDataHandlerTest.php</file>
            <file>AbstractLoggerHandlerTest.php</file>
            <file>fileLoggerTest.php</file>
            <file>BillcodeTest.php</file>
            <file>HttpCurlTest.php</file>
            <file>HttpSocketTest.php</file>
            <file>HttpTest.php</file>
            <file>IdealBanksTest.php</file>
            <file>IdealNotificationTest.php</file>
            <file>IdealTest.php</file>
            <file>MultipayTest.php</file>
            <file>NotificationTest.php</file>
            <file>PaycodeTest.php</file>
            <file>PaycodeAbstractTest.php</file>
            <file>PaycodeDetailsAbstractTest.php</file>
            <file>RefundTest.php</file>
            <file>SofortUeberweisungTest.php</file>
            <file>TransactionDataTest.php</file>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
        <directory suffix=".php">../</directory>
        <directory suffix=".php">../Xml/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./report/coverage" charset="UTF-8" highlight="true" lowUpperBound="35"
             highLowerBound="70"/>
        <log type="story-html" target="./report/story" charset="UTF-8" highlight="true" lowUpperBound="35"
             highLowerBound="70"/>
        <log type="testdox-html" target="./report/testdox" charset="UTF-8" highlight="true" lowUpperBound="35"
             highLowerBound="70"/>
    </logging>
</phpunit>